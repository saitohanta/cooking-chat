<% @posts.each do |post| %>
  <%= link_to admin_post_path(post.id) do %>
    <% if post.post_image.attached? %>
      <%= image_tag post.post_image, size: "50x50" %>
    <% end %>
    <%= post.title %>
    <%= post.member.name %>
  <% end %>
  <i class="fa-regular fa-thumbs-up" style="color: #787878;"></i>️<%= post.favorites.count %>
  <i class="fa-solid fa-message" style="color: #787878;"></i><%= post.comments.count %>
<% end %>
<% @recipes.each do |recipe| %>
  <%= link_to admin_recipe_path(recipe.id) do %>
    <%= image_tag recipe.cooking_image, size: "50x50" %>
    <%= recipe.menu_name %>
    <%= recipe.member.name %>
  <% end %>
  <i class="fa-regular fa-thumbs-up" style="color: #787878;"></i>️<%= recipe.recipe_favorites.count %>
  <i class="fa-solid fa-message" style="color: #787878;"></i><%= recipe.recipe_comments.count %>
<% end %>