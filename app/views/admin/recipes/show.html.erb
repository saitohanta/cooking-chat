<div class="card mx-auto mt-3" style="width: 30rem;">
  <div class="row">
    <div class="card-body">
      <div class="d-flex">
        <%= image_tag @recipe.member.profile_image, class: "rounded-circle", size: "70x70" %>
        <div class="d-flex">
          <div class="p-1">
            <div><%= @recipe.member.name %></div>
            <div><%= @recipe.created_at.strftime('%Y/%m/%d') %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <h4 class="card-title text-center">
    <%= @recipe.menu_name %>
  </h4>
  <%= image_tag @recipe.cooking_image %>
  <div class="card-body">
    <%= @recipe.count %>人分
  </div>
  <div class="card-body border-bottom">
    <h5>材料</h5>
    <%= @recipe.material %>
  </div>
  <div class="card-body">
    <h5>作り方</h5>
    <%= @recipe.process %>
  </div>
  <div class="row">
    <div class="card-body">
      <div class="d-flex">
        <span class="ml-3">
          <%= link_to "削除", admin_recipe_path(@recipe), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %>
        </span>
        <span class="ml-4">
          <i class="fa-regular fa-thumbs-up" style="color: #787878;"></i>️<%= @recipe.recipe_favorites.count %>
        </span>
        <span class="ml-4">
          コメント数:<span id="comment_count"><%= @recipe.recipe_comments.count %></span>
        </span>
      </div>
    </div>
  </div>
</div>

<!--コメント機能-->
<div class="card mx-auto" style="width: 30rem;">
  <div class="row">
    <div class="card-body">
      <div id="comments">
        <%= render "admin/recipe_comments/comment", recipe: @recipe , recipe_comment: @recipe_comment %>
      </div>
    </div>
  </div>
</div>
