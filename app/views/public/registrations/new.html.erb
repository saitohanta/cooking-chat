<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">新規会員登録</h5>
      <div class="form-body p-4">
        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <%= f.text_field :name, autofocus: true, placeholder: "名前" %>
            </div>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", size: 30 %>
            </div>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)" %>
            </div>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)" %>
            </div>
          </div>
          <div class="actions mb-3">
            <%= f.submit "新規登録", class:"btn btn-primary btn-block" %>
          </div>
        <% end %>

        <h5>会員登録がお済みでない方</h5>
        <%= render "public/shared/links" %>からログインしてください。
      </div>
    </div>
  </div>
</div>