 <% @posts.each do |post| %>
    <%= image_tag post.member.profile_image, size: "50x50" %>
    <%= post.member.name %>
    <%= post.created_at.strftime('%Y/%m/%d') %>
    <%= link_to post_path(post) do %>
      <%= post.title %>
      <%= image_tag post.post_image, size: "50x50" %>
    <% end %>
  <% end %>
  <% @recipes.each do |recipe| %>
    <%= image_tag recipe.member.profile_image, size: "50x50" %>
    <%= recipe.member.name %>
    <%= recipe.created_at.strftime('%Y/%m/%d') %>
    <%= link_to recipe_path(recipe) do %>
      <%= recipe.menu_name %>
      <%= image_tag recipe.cooking_image, size: "50x50" %>
    <% end %>
  <% end %>
