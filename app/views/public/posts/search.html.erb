<div class="container">
  <h4>投稿</h4>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-12 col-md-6 col-lg-4 ">
        <div class="card mt-3" style="width: 18rem;">
          <div class="row">
            <div class="card-body">
              <div class="d-flex">
                <%= image_tag post.member.profile_image, size: "50x50" %>
                <div class="d-flex">
                  <div class="p-1">
                    <div><%= post.member.name %></div>
                    <div><%= post.created_at.strftime('%Y/%m/%d') %></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%= link_to post_path(post) do %>
            <h5 class="card-title text-center text-dark">
              <%= post.title %>
            </h5>
            <% if post.post_image.attached? %>
              <%= image_tag post.post_image, size: "286x200" %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <h4>レシピ</h4>
  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-12 col-md-6 col-lg-4 ">
        <div class="card mt-3" style="width: 18rem;">
          <div class="row">
            <div class="card-body">
              <div class="d-flex">
                <%= image_tag recipe.member.profile_image, size: "50x50" %>
                <div class="d-flex">
                  <div class="p-1">
                    <div><%= recipe.member.name %></div>
                    <div><%= recipe.created_at.strftime('%Y/%m/%d') %></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%= link_to recipe_path(recipe) do %>
            <h5 class="card-title text-center text-dark">
              <%= recipe.menu_name %>
            </h5>
            <%= image_tag recipe.cooking_image, size: "286x200" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>