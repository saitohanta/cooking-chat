<%= render "public/posts/error_message", post: @post %>
<%= form_with model: @post, url: post_path(@post) do |f| %>
<%= f.label :タイトル %>
<%= f.text_field :title, placeholder: "タイトル" %>
<%= f.label :画像 %>
<%= f.file_field :post_image, accept: "image/*" %>
<%= f.label :本文 %>
<%= f.text_area :body, placeholder: "本文" %>
<%= f.submit "編集内容を保存", class:"btn btn-success" %>
<% end %>