<% recipe.recipe_comments.each do |comment| %>
  <%= image_tag comment.member.get_profile_image(50,50) %>
  <%= comment.member.name %>
  <%= comment.created_at.strftime("%Y/%m/%d") %><%= comment.content %>
<% if comment.member == current_member %>
  <%= link_to "削除", recipe_recipe_comment_path(comment.recipe, comment), method: :delete, remote:true, data: {"turbolinks" => false} %>
<% end %>
<% end %>
