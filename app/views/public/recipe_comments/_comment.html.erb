<% recipe.recipe_comments.each do |comment| %>
  <div class="border-bottom">
    <div class="d-flex">
      <%= image_tag comment.member.get_profile_image(50,50), class: "rounded-circle" %>
      <div class="d-flex">
        <div class="p-1">
          <div>
            <%= comment.member.name %>
          </div>
          <div>
            <%= comment.created_at.strftime("%Y/%m/%d") %>
          </div>
        </div>
      </div>
    </div>
      <div>
        <%=safe_join(comment.content.split("\n"),tag(:br))%>
      </div>
      <% if comment.member == current_member %>
        <%= link_to "削除", recipe_recipe_comment_path(comment.recipe, comment), method: :delete, remote:true, data: {"turbolinks" => false}, class:"btn btn-danger btn-sm" %>
      <% end %>
  </div>
<% end %>
