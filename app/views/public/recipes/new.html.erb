<%= render "public/recipes/error_message", recipe: @recipe %>
<%= form_with model: @recipe, url: recipes_path, method: :post do |f| %>
<%= f.label :画像 %>
<%= f.file_field :cooking_image, accept: "image/*" %>
<%= f.label :メニュー名 %>
<%= f.text_field :menu_name, placeholder: "メニュー名" %>
<%=f.label :人数 %>
<%=f.text_field :count, placeholder: "人数" %>
<%=f.label :材料 %>
<%=f. text_area :material, placeholder: "材料" %>
<%=f.label :作り方 %>
<%=f.text_area :process, placeholder: "作り方" %>
<%=f.submit "投稿する", class:"btn btn-warning" %>
<% end %>