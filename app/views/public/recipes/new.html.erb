<div class="container">
  <%= render "public/recipes/error_message", recipe: @recipe %>
  <%= form_with model: @recipe, url: recipes_path, method: :post do |f| %>
  <div class="field text-center">
    <span class="ml-5">
      <%= f.label :画像, style: "width: 350px; margin-top: 100px; margin-bottom: 30px" %>
    </span>
    <span class="ml-5">
      <%= f.file_field :cooking_image, accept: "image/*" %>
    </span>
  </div>
  <div class="field text-center">
    <span class="ml-5">
      <%= f.label :メニュー名, style: "width: 200px; padding-right: 120px; margin-bottom: 40px;" %>
    </span>
    <span class="ml-5">
      <%= f.text_field :menu_name, placeholder: "メニュー名" %>
    </span>
  </div>
  <div class="field text-center">
    <span class="ml-5">
      <%=f.label :人数, style: "width: 200px; padding-right: 140px; margin-bottom: 40px;" %>
    </span>
    <span class="ml-5">
      <%=f.text_field :count, placeholder: "人数" %>
    </span>
  </div>
  <div class="field text-center">
    <span class="ml-5">
      <%=f.label :材料, style: "width: 290px; padding-right: 60px;" %>
    </span>
    <span class="ml-5">
      <%=f. text_area :material, placeholder: "材料", size: " 30 x 5 " %>
    </span>
  </div>
  <div class="field text-center">
    <span class="ml-5">
      <%=f.label :作り方, style: "width: 290px; padding-right: 60px;" %>
    </span>
    <span class="ml-5">
      <%=f.text_area :process, placeholder: "作り方", size: " 30 x 6 " %>
    </span>
  </div>
  <%=f.submit "投稿する", class:"btn btn-warning", style: "margin-top: 20px; margin-left: 610px;" %>
  <% end %>
</div>