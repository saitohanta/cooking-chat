<%#= image_tag @recipe.member.profile_image, size: "50x50" %>
<%= @recipe.member.name %>
<%= @recipe.created_at.strftime('%Y/%m/%d') %>
<%= @recipe.menu_name %>
<%= image_tag @recipe.cooking_image, size: "50x50" %>
<%= @recipe.count %>人分
<%= @recipe.material %>
<%= @recipe.process %>
<% if @recipe.member == current_member %>
  <%= link_to "編集", edit_recipe_path %>
  <%= link_to "削除", recipe_path(@recipe), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>

<% if @recipe.favorited_by?(current_member) %>
  <%= link_to recipe_recipe_favorites_path(@recipe), method: :delete do %>
  <%= @recipe.recipe_favorites.count %>いいね
<% end %>
<% else %>
<%= link_to recipe_recipe_favorites_path(@recipe),method: :post do %>
  <%= @recipe.recipe_favorites.count %>いいね
<% end %>
<% end %>

コメント数<%= @recipe.recipe_comments.count %>
<% @recipe.recipe_comments.each do |comment| %>
  <%= image_tag comment.member.get_profile_image(50,50) %>
  <%= comment.member.name %>
  <%= comment.created_at.strftime("%Y/%m/%d") %><%= comment.content %>
<% if comment.member == current_member %>
  <%= link_to "削除", recipe_recipe_comment_path(comment.recipe, comment), method: :delete %>
<% end %>
<% end %>

<%= form_with model: [@recipe, @recipe_comment] do |f| %>
  <%= f.text_area :content, rows: "2", placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
