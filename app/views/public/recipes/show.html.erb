<%= image_tag @recipe.member.profile_image, size: "50x50" %>
<%= @recipe.member.name %>
<%= @recipe.created_at.strftime('%Y/%m/%d') %>
<%= @recipe.menu_name %>
<%= image_tag @recipe.cooking_image, size: "50x50" %>
<%= @recipe.count %>人分
<%= @recipe.material %>
<%= @recipe.process %>
<% if @recipe.member == current_member %>
  <%= link_to "編集", edit_recipe_path %>
  <%= link_to "削除", recipe_path(@recipe), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>

<!--いいね機能-->
<div id="favorite_btn_<%= @recipe.id %>">
  <% if member_signed_in? %>
    <%= render "public/recipe_favorites/favorite", recipe: @recipe %>
  <% else %>
    ️<%= @recipe.recipe_favorites.count %>いいね
  <% end %>
</div>

<!--ブックマーク機能-->
<div id="bookmark_btn_<%= @recipe.id %>">
  <% if member_signed_in? %>
    <%= render "public/recipe_bookmarks/bookmark.button", recipe: @recipe %>
  <% end %>
</div>

<!--コメント機能-->
コメント数:<span id="comment_count"><%= @recipe.recipe_comments.count %></span>
<div id="comments">
  <%= render "public/recipe_comments/comment", recipe: @recipe , recipe_comment: @recipe_comment %>
</div>
<div id="comment-form">
  <% if member_signed_in? %>
    <%= render "public/recipe_comments/form", recipe: @recipe , recipe_comment: @recipe_comment %>
  <% end %>
</div>