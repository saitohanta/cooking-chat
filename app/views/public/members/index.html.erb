<% @members.each do |member| %>
  <% if member == current_member %>
    <% member.posts.each do |post| %>
      <%= link_to post_path(post) do %>
        <% if post.post_image.attached? %>
          <%= image_tag post.post_image, size: "50x50" %>
        <% end %>
        <%= post.title %>
      <% end %>
      <%= post.created_at.strftime('%Y/%m/%d') %>
      ️<%= post.favorites.count %>いいね
      <%= post.comments.count %>コメント
    <% end %>
    <% member.recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe) do %>
        <%= image_tag recipe.cooking_image, size: "50x50" %>
        <%= recipe.menu_name %>
      <% end %>
      <%= recipe.created_at.strftime('%Y/%m/%d') %>
      ️<%= recipe.recipe_favorites.count %>いいね
      <%= recipe.recipe_comments.count %>コメント
    <% end %>
  <% end %>
<% end %>