<% if recipe.favorited_by?(current_member) %>
  <%= link_to recipe_recipe_favorites_path(recipe), method: :delete, remote:true do %>
    <%= recipe.recipe_favorites.count %>いいね
  <% end %>
<% else %>
  <%= link_to recipe_recipe_favorites_path(recipe),method: :post, remote:true do %>
    <%= recipe.recipe_favorites.count %>いいね
  <% end %>
<% end %>