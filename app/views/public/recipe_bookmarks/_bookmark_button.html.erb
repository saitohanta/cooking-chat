<% if current_member.recipe_bookmark?(recipe) %>
  <%= link_to recipe_recipe_bookmark_path(recipe.id, current_member.recipe_bookmarks.find_by(recipe_id: recipe.id)), id: "js-recipe_bookmark-button-for-recipe-#{recipe.id}", method: :delete, remote:true, class:"btn btn" do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to recipe_recipe_bookmarks_path(recipe_id: recipe.id), id: "js-recipe_bookmark-button-for-recipe-#{recipe.id}", method: :post, remote:true, class:"btn btn" do %>
    <i class="fa-regular fa-bookmark"></i>
  <% end%>
<% end %>
